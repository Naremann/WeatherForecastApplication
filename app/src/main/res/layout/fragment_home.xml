<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="adapter"
            type="com.example.weatherforecastapplication.ui.home.HourlyWeatherAdapter" />
        <variable
            name="viewModel"
            type="com.example.weatherforecastapplication.ui.home.HomeViewModel" />
    </data>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:background="@drawable/sun_sky"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        >
        <com.google.android.material.internal.BaselineLayout
            android:id="@+id/baseline1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="40dp"
            />
        <TextView
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/baseline1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Cairo"
            android:textSize="30sp"
            android:textColor="@color/white"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/temp"
            app:layout_constraintStart_toEndOf="@id/temp"
            android:text="@{viewModel.temp !=null ? @string/celsius : null}"
            android:textColor="@color/white"
            android:textSize="30sp"
            tools:text="C"
            android:layout_marginTop="8dp"
            />


        <!-- Displaying current weather -->
        <TextView
            android:id="@+id/temp"
            android:text="@{viewModel.temp}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/city"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="21"
            android:textColor="@color/white"
            android:textSize="90sp"
            />
        <!-- <TextView
             android:id="@+id/temperatureRange"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             app:layout_constraintTop_toBottomOf="@id/temp"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             android:textSize="20sp"
             tools:text="21/12"
             android:textColor="@color/white"
             android:text="@{viewModel.tempRang}"
             />-->
        <LinearLayout
            android:id="@+id/weather_desc_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/temp"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/weather_desc"
                android:text="@{viewModel.currentWeather.weather.get(0).description}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/temp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/white"
                tools:text="Partly Cloudy"
                android:textSize="25sp"
                android:layout_marginTop="8dp"
                />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintBottom_toBottomOf="@id/weather_desc"
                app:layout_constraintStart_toEndOf="@id/weather_desc"
                android:layout_marginStart="8dp"
                app:drawableImg="@{viewModel.currentWeather.weather.get(0).icon}"
                tools:src="@drawable/snow"
                android:layout_marginTop="8dp"

                />
        </LinearLayout>
        <com.google.android.material.internal.BaselineLayout
            android:id="@+id/baseline2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="250dp"
            />
        <TextView
            android:id="@+id/current_date"
            android:text="@{viewModel.currentDate}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/baseline2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            tools:text="Tue, 06March"
            android:textColor="@color/off_white"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/time"
            android:text="@{viewModel.currentTime}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/current_date"
            app:layout_constraintStart_toStartOf="@id/current_date"
            android:textColor="@color/off_white"
            android:textSize="20sp"
            tools:text="5:00"
            />
        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            app:layout_constraintTop_toBottomOf="@id/time"
            android:layout_marginTop="8dp"
            android:background="@color/off_white"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="horizontal"
            app:adapter="@{viewModel.hourlyAdapter}"
            android:padding="8dp"
            android:layout_marginTop="10dp"
            android:clipToPadding="false"
            app:itemSpacing="4dp"
            app:layout_constraintTop_toBottomOf="@id/view1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            app:layout_constraintTop_toBottomOf="@id/recycler_view"
            android:layout_marginTop="8dp"
            android:background="@color/off_white"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/dailyRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view2"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="horizontal"
            android:clipToPadding="false"
            app:adapter="@{viewModel.dailyAdapter}"
            android:layout_marginTop="10dp"
            />

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            app:layout_constraintTop_toBottomOf="@id/dailyRecyclerView"
            android:layout_marginTop="8dp"
            android:background="@color/off_white"

            />

        <!--      <TextView
                  android:text="@{String.valueOf(viewModel.currentWeather.main.humidity)}"
                  android:layout_width="wrap_content"
                  app:layout_constraintTop_toBottomOf="@id/temp"
                  app:layout_constraintStart_toStartOf="parent"
                  android:layout_height="wrap_content" />-->

        <!-- <TextView
             android:text="@{viewModel.currentDate}"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" />




<TextView
            android:text="@{String.valueOf(viewModel.currentWeather.main.pressure)}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/temperatureRange"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/white"
            tools:text="Partly Cloudy"
            android:textSize="25sp"
            android:layout_marginTop="8dp"
            />


         <TextView
             android:text="@{String.valueOf(viewModel.currentWeather.wind.speed)}"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" />



         <TextView
             android:text="@{String.valueOf(viewModel.currentWeather.clouds.all)}"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" />

         &lt;!&ndash; Accessing nested property sys.city &ndash;&gt;
    &lt;!&ndash;     <TextView
             android:text="@{viewModel.currentWeather.main.}"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" />&ndash;&gt;

         <TextView
             android:text="@{viewModel.currentWeather.weather.get(0).icon}"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" />

         <TextView
             android:text="@{viewModel.currentWeather.weather.get(0).description}"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" />

         &lt;!&ndash; Display hourly weather &ndash;&gt;
         <androidx.recyclerview.widget.RecyclerView
             android:id="@+id/hourlyRecyclerView"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             app:weatherItems="@{viewModel.hourlyWeather}"
             app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
             android:orientation="horizontal"
             app:adapter="@{adapter}"
             />

         &lt;!&ndash; Display daily weather &ndash;&gt;
         <androidx.recyclerview.widget.RecyclerView
             android:id="@+id/dailyRecyclerView"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             app:weatherItems="@{viewModel.dailyWeather}"
             app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="horizontal"
             app:adapter="@{adapter}"
             />-->
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
</layout>
